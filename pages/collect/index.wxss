.collect-main .collect-title {
  padding: 35rpx 10rpx;
  background-color: #f2f4f5;
}
.collect-main .collect-title .title-item {
  padding: 15rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
  margin-left: 20rpx;
}
.collect-main .collect-title .active {
  color: var(--themeColor);
  border-color: currentColor;
}
.collect-main .collect-content .goods-item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx 0;
}
.collect-main .collect-content .goods-item .goods-item-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  /* text-align: center; */
}
.collect-main .collect-content .goods-item .goods-item-wrap image {
  width: 70%;
}
.collect-main .collect-content .goods-item .goods-info-wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect-main .collect-content .goods-item .goods-info-wrap .goods-info-title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect-main .collect-content .goods-item .goods-info-wrap .goods-info-price {
  color: var(--themeColor);
  font-size: 32rpx;
}
