page {
  padding-bottom: 90rpx;
}
.address-wrapper {
  padding: 20rpx;
  width: 100%;
}
.address-info {
  display: flex;
}
.address-info .user-info {
  flex: 5;
}
.address-info .user-phone {
  flex: 3;
  text-align: right;
}
.cart-wrapper .cart-title {
  color: var(--themeColor);
  font-size: 34rpx;
  padding: 20rpx;
  margin-top: 5rpx;
  border-bottom: 1px solid currentColor;
  border-top: 1px solid currentColor;
}
.cart-wrapper .cart-main .cart-item {
  display: flex;
  padding: 15rpx;
  border-bottom: 1px solid #ccc;
}
.cart-wrapper .cart-main .cart-item .cart-center-img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-wrapper .cart-main .cart-item .cart-center-img image {
  width: 80%;
}
.cart-wrapper .cart-main .cart-item .cart-right-info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart-wrapper .cart-main .cart-item .cart-right-info .goods-title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart-wrapper .cart-main .cart-item .cart-right-info .goods-price-wrapper {
  display: flex;
  justify-content: space-between;
}
.cart-wrapper .cart-main .cart-item .cart-right-info .goods-price-wrapper .goods-price {
  color: var(--themeColor);
  font-size: 32rpx;
}
.cart-wrapper .cart-main .cart-item .cart-right-info .goods-price-wrapper .goods-num-wrapper {
  display: flex;
}
.cart-wrapper .cart-main .cart-item .cart-right-info .goods-price-wrapper .goods-num-wrapper .goods-num {
  display: flex;
  justify-content: center;
  align-items: center;
}
.foot-tools {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  height: 90rpx;
  font-size: 26rpx;
  border-top: 1px solid #ccc;
  background-color: #fff;
}
.foot-tools .center-price {
  flex: 5;
  text-align: right;
  padding-right: 20rpx;
  font-size: 30rpx;
}
.foot-tools .center-price .price {
  font-size: 36rpx;
  color: var(--themeColor);
}
.foot-tools .center-price .freight {
  font-size: 26rpx;
}
.foot-tools .right-to-buy {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
  font-weight: 500;
  font-size: 34rpx;
}
